{
  "name": "@freecodecamp/contribute",
  "description": "Tools to help maintain freecodecamp.org's Open Source Codebase on GitHub",
  "bin": {
    "presolver": "probot/index.js"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "postinstall": "npm run bootstrap",
    "format": "prettier --write es5 ./**/*.{js,json} && npm run lint",
    "lint": "eslint ./**/*.js --fix",
    "start": "lerna run start --stream",
    "seed": "lerna run seed --stream",
    "dev": "nodemon"
  },
  "devDependencies": {
    "dotenv": "^6.2.0",
    "eslint": "^5.9.0",
    "eslint-config-freecodecamp": "^1.1.1",
    "joi": "^14.3.1",
    "lerna": "^3.5.1",
    "presolver": "file:probot",
    "prettier": "^1.15.2"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "probot": {
    "apps": [
      "presolver"
    ]
  },
  "dependencies": {
    "ajv": "^6.6.1",
    "ajv-keywords": "^3.2.0"
  }
}
